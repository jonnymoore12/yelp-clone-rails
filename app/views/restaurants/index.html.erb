<a href='/restaurants/new'>Add a restaurant</a>

<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
    <h2 class="resto_name" ><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
    <h3>Average rating: <%=star_rating(restaurant.average_rating) %></h3>
    <%= restaurant.description %>
    <br />
    <%= image_tag restaurant.image.url(:thumb), :class => "img-rounded"  %>
    <br />
    <% restaurant.reviews.all.each do |review| %>
      <%= review.thoughts %>
      <%=star_rating(restaurant.average_rating) %>
      <br />
      <%= link_to "Endorse Review", review_endorsements_path(restaurant), method: :post %>
      <%= pluralize(review.endorsements.count, "endorsements") %>
      <br />
    <% end %>
    <%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %>
    <% if restaurant.user == current_user %>
    <br />
      <%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
      <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %>
    <% end %>
  <% end %>
<% else %>
  <h1>No restaurants yet</h1>
<% end %>
